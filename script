    –∑–∞–¥–∞—á–∏ = []

print("\nüß† –≠—Ç–æ –Ω–∞—á–∞–ª—å–Ω–∞—è –Ω–µ–π—Ä–æ—Å–µ—Ç—å.")
print("‚ùó –í–ê–ñ–ù–û: –ë–æ—Ç –Ω–µ —É–º–µ–µ—Ç –ø–æ–Ω–∏–º–∞—Ç—å —Å–≤–æ–±–æ–¥–Ω—ã–π —Ç–µ–∫—Å—Ç.")
print("–ü–∏—à–∏—Ç–µ –∫–æ–º–∞–Ω–¥—ã —Å—Ç—Ä–æ–≥–æ –ø–æ –∏–Ω—Å—Ç—Ä—É–∫—Ü–∏–∏.")
print("–ü—Ä–∏–≤–µ—Ç! –Ø —É–º–µ—é:")
print("üîç ‚Äî –ò—Å–∫–∞—Ç—å –≤ Google")
print("üßÆ ‚Äî –°—á–∏—Ç–∞—Ç—å –≤—ã—Ä–∞–∂–µ–Ω–∏—è")
print("üß† ‚Äî –ó–∞–ø–æ–º–∏–Ω–∞—Ç—å –∏ –≤—Å–ø–æ–º–∏–Ω–∞—Ç—å")
print("üìÜ ‚Äî –ü–æ–∫–∞–∑—ã–≤–∞—Ç—å –≤—Ä–µ–º—è –∏ –¥–∞—Ç—É")
print("üóÇ ‚Äî –í–µ—Å—Ç–∏ —Å–ø–∏—Å–æ–∫ –∑–∞–¥–∞—á")
print("üéÆ ‚Äî –†–∞–∑–≤–ª–µ–∫–∞—Ç—å (–∞–Ω–µ–∫–¥–æ—Ç—ã, –≥–µ–Ω–µ—Ä–∞—Ç–æ—Ä—ã)")
print("üíæ ‚Äî –°–æ—Ö—Ä–∞–Ω—è—Ç—å –¥–∞–Ω–Ω—ã–µ –º–µ–∂–¥—É –∑–∞–ø—É—Å–∫–∞–º–∏")
print("–í–≤–µ–¥–∏—Ç–µ '–ø–æ–º–æ—â—å', —á—Ç–æ–±—ã —É–≤–∏–¥–µ—Ç—å —Å–ø–∏—Å–æ–∫ –∫–æ–º–∞–Ω–¥.\n")

while True:
    –∫–æ–º–∞–Ω–¥–∞ = input("–í—ã: ").lower().strip()

    if –∫–æ–º–∞–Ω–¥–∞ in ["–≤—ã—Ö–æ–¥", "exit"]:
        with open(—Ñ–∞–π–ª_–ø–∞–º—è—Ç–∏, "w", encoding="utf-8") as f:
            json.dump(–ø–∞–º—è—Ç—å, f, ensure_ascii=False, indent=2)
        with open(—Ñ–∞–π–ª_–¥–µ–ª–∞, "w", encoding="utf-8") as f:
            json.dump(–∑–∞–¥–∞—á–∏, f, ensure_ascii=False, indent=2)
        print("üëã –î–æ –≤—Å—Ç—Ä–µ—á–∏!")
        break

    elif –∫–æ–º–∞–Ω–¥–∞ == "–ø–æ–º–æ—â—å":
        print("\nüìã –ö–æ–º–∞–Ω–¥—ã –ø–æ –∫–∞—Ç–µ–≥–æ—Ä–∏—è–º:")
        print("üîç –ü–æ–∏—Å–∫: —É–∑–Ω–∞—Ç—å –æ [–∑–∞–ø—Ä–æ—Å]")
        print("üßÆ –ö–∞–ª—å–∫—É–ª—è—Ç–æ—Ä: 2 + 2, 3 * 4 –∏ —Ç.–¥.")
        print("üß† –ü–∞–º—è—Ç—å: –∑–∞–ø–æ–º–Ω–∏ —á—Ç–æ —Ç–∞–∫–æ–µ X: Y / —á—Ç–æ —Ç–∞–∫–æ–µ X")
        print("üóÇ –î–µ–ª–∞: –¥–æ–±–∞–≤–∏—Ç—å –∑–∞–¥–∞—á—É: –• / —Å–ø–∏—Å–æ–∫ –∑–∞–¥–∞—á / —É–¥–∞–ª–∏—Ç—å –∑–∞–¥–∞—á—É: –•")
        print("üìÜ –î–∞—Ç–∞/–≤—Ä–µ–º—è: –¥–∞—Ç–∞ / –≤—Ä–µ–º—è")
        print("üéÆ –†–∞–∑–≤–ª–µ—á–µ–Ω–∏—è: –∞–Ω–µ–∫–¥–æ—Ç / —á–∏—Å–ª–æ / –ø–∞—Ä–æ–ª—å")
        print("üí¨ –û–±—â–µ–µ: —É—Å—Ç–∞–Ω–æ–≤–∏ –∏–º—è: –• / –∫–∞–∫ –º–µ–Ω—è –∑–æ–≤—É—Ç / –∫—Ç–æ —Ç—ã / –ø—Ä–∏–≤–µ—Ç / –∞–≤—Ç–æ—Ä")
        print("üö™ –≤—ã—Ö–æ–¥\n")

   
    elif –∫–æ–º–∞–Ω–¥–∞.startswith("—É–∑–Ω–∞—Ç—å –æ"):
        –∑–∞–ø—Ä–æ—Å = –∫–æ–º–∞–Ω–¥–∞.replace("—É–∑–Ω–∞—Ç—å –æ", "").strip()
        if –∑–∞–ø—Ä–æ—Å:
            print("üîé –û—Ç–∫—Ä—ã–≤–∞—é Google...")
            webbrowser.open(f"https://www.google.com/search?q={–∑–∞–ø—Ä–æ—Å}")
        else:
            print("‚ùó –£—Ç–æ—á–Ω–∏ –∑–∞–ø—Ä–æ—Å –ø–æ—Å–ª–µ '—É–∑–Ω–∞—Ç—å –æ'")

    
    elif any(op in –∫–æ–º–∞–Ω–¥–∞ for op in ["+", "-", "*", "/", "%", "**"]):
        try:
            —Ä–µ–∑—É–ª—å—Ç–∞—Ç = eval(–∫–æ–º–∞–Ω–¥–∞)
            print("üßÆ –û—Ç–≤–µ—Ç:", —Ä–µ–∑—É–ª—å—Ç–∞—Ç)
        except:
            print("‚ùó –û—à–∏–±–∫–∞ –≤ –≤—ã—Ä–∞–∂–µ–Ω–∏–∏")

    
    elif –∫–æ–º–∞–Ω–¥–∞.startswith("–∑–∞–ø–æ–º–Ω–∏ —á—Ç–æ —Ç–∞–∫–æ–µ"):
        try:
            –∫–ª—é—á, –∑–Ω–∞—á–µ–Ω–∏–µ = –∫–æ–º–∞–Ω–¥–∞.replace("–∑–∞–ø–æ–º–Ω–∏ —á—Ç–æ —Ç–∞–∫–æ–µ", "").split(":")
            –ø–∞–º—è—Ç—å[–∫–ª—é—á.strip()] = –∑–Ω–∞—á–µ–Ω–∏–µ.strip()
            print("‚úÖ –ó–∞–ø–æ–º–Ω–∏–ª!")
        except:
            print("‚ùó –ü–∏—à–∏ —Ç–∞–∫: –∑–∞–ø–æ–º–Ω–∏ —á—Ç–æ —Ç–∞–∫–æ–µ —è–±–ª–æ–∫–æ: —Ñ—Ä—É–∫—Ç")

    elif –∫–æ–º–∞–Ω–¥–∞.startswith("—á—Ç–æ —Ç–∞–∫–æ–µ"):
        –∫–ª—é—á = –∫–æ–º–∞–Ω–¥–∞.replace("—á—Ç–æ —Ç–∞–∫–æ–µ", "").strip()
        –æ—Ç–≤–µ—Ç = –ø–∞–º—è—Ç—å.get(–∫–ª—é—á)
        print(f"üìò {–∫–ª—é—á} ‚Äî {–æ—Ç–≤–µ—Ç}" if –æ—Ç–≤–µ—Ç else "‚ùó –Ø –Ω–µ –∑–Ω–∞—é —ç—Ç–æ–≥–æ")

    
    elif –∫–æ–º–∞–Ω–¥–∞.startswith("–¥–æ–±–∞–≤–∏—Ç—å –∑–∞–¥–∞—á—É"):
        –∑–∞–¥–∞—á–∞ = –∫–æ–º–∞–Ω–¥–∞.replace("–¥–æ–±–∞–≤–∏—Ç—å –∑–∞–¥–∞—á—É", "").strip()
        –∑–∞–¥–∞—á–∏.append(–∑–∞–¥–∞—á–∞)
        print("üìù –ó–∞–¥–∞—á–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∞.")

    elif –∫–æ–º–∞–Ω–¥–∞ == "—Å–ø–∏—Å–æ–∫ –∑–∞–¥–∞—á":
        if –∑–∞–¥–∞—á–∏:
            print("üìã –°–ø–∏—Å–æ–∫ –∑–∞–¥–∞—á:")
            for i, z in enumerate(–∑–∞–¥–∞—á–∏, 1):
                print(f"  {i}. {z}")
        else:
            print("‚úÖ –ù–µ—Ç –∑–∞–¥–∞—á.")

    elif –∫–æ–º–∞–Ω–¥–∞.startswith("—É–¥–∞–ª–∏—Ç—å –∑–∞–¥–∞—á—É"):
        —Ç–µ–∫—Å—Ç = –∫–æ–º–∞–Ω–¥–∞.replace("—É–¥–∞–ª–∏—Ç—å –∑–∞–¥–∞—á—É", "").strip()
        if —Ç–µ–∫—Å—Ç in –∑–∞–¥–∞—á–∏:
            –∑–∞–¥–∞—á–∏.remove(—Ç–µ–∫—Å—Ç)
            print("üóë –£–¥–∞–ª–µ–Ω–æ.")
        else:
            print("‚ùó –ù–µ—Ç —Ç–∞–∫–æ–π –∑–∞–¥–∞—á–∏.")

    
    elif –∫–æ–º–∞–Ω–¥–∞ == "–≤—Ä–µ–º—è":
        print("üïí –°–µ–π—á–∞—Å:", datetime.now().strftime("%H:%M:%S"))
    elif –∫–æ–º–∞–Ω–¥–∞ == "–¥–∞—Ç–∞":
        print("üìÖ –°–µ–≥–æ–¥–Ω—è:", datetime.now().strftime("%Y-%m-%d"))

    
    elif –∫–æ–º–∞–Ω–¥–∞ == "–∞–Ω–µ–∫–¥–æ—Ç":
        —à—É—Ç–∫–∏ = [
            "–ü–æ—á–µ–º—É –ø—Ä–æ–≥—Ä–∞–º–º–∏—Å—Ç—ã –ø—É—Ç–∞—é—Ç –†–æ–∂–¥–µ—Å—Ç–≤–æ –∏ –•–µ–ª–ª–æ—É–∏–Ω? –ü–æ—Ç–æ–º—É —á—Ç–æ 25 = 31 –≤ –≤–æ—Å—å–º–µ—Ä–∏—á–Ω–æ–π —Å–∏—Å—Ç–µ–º–µ.",
            "–¢–µ—Å—Ç–∏—Ä–æ–≤—â–∏–∫ –∑–∞—à—ë–ª –≤ –±–∞—Ä: –∑–∞–∫–∞–∑–∞–ª –ø–∏–≤–æ, 0 –ø–∏–≤–∞, -1 –ø–∏–≤–∞, –∫–æ—à–∫—É, 999999 –ø–∏–≤–∞..."
        ]
        print("üòÇ", random.choice(—à—É—Ç–∫–∏))

    elif –∫–æ–º–∞–Ω–¥–∞ == "—á–∏—Å–ª–æ":
        print("üé≤ –°–ª—É—á–∞–π–Ω–æ–µ —á–∏—Å–ª–æ:", random.randint(1, 100))

    elif –∫–æ–º–∞–Ω–¥–∞ == "–ø–∞—Ä–æ–ª—å":
        —Å–∏–º–≤–æ–ª—ã = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
        –ø–∞—Ä–æ–ª—å = "".join(random.choices(—Å–∏–º–≤–æ–ª—ã, k=10))
        print("üîê –ì–µ–Ω–µ—Ä–∞—Ç–æ—Ä –ø–∞—Ä–æ–ª—è:", –ø–∞—Ä–æ–ª—å)

    
    elif –∫–æ–º–∞–Ω–¥–∞.startswith("—É—Å—Ç–∞–Ω–æ–≤–∏ –∏–º—è"):
        –∏–º—è_–ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è = –∫–æ–º–∞–Ω–¥–∞.replace("—É—Å—Ç–∞–Ω–æ–≤–∏ –∏–º—è", "").strip()
        print(f"üë§ –ü—Ä–∏–≤–µ—Ç, {–∏–º—è_–ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è}! –Ø –∑–∞–ø–æ–º–Ω–∏–ª.")

    elif –∫–æ–º–∞–Ω–¥–∞ == "–∫–∞–∫ –º–µ–Ω—è –∑–æ–≤—É—Ç":
        print(f"üßæ –¢–µ–±—è –∑–æ–≤—É—Ç {–∏–º—è_–ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è}." if –∏–º—è_–ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è else "‚ùó –Ø –Ω–µ –∑–Ω–∞—é —Ç–≤–æ—ë –∏–º—è.")

    elif –∫–æ–º–∞–Ω–¥–∞ in ["–ø—Ä–∏–≤–µ—Ç", "–∑–¥—Ä–∞–≤—Å—Ç–≤—É–π"]:
        print("üëã –ü—Ä–∏–≤–µ—Ç! –†–∞–¥ —Ç–µ–±—è –≤–∏–¥–µ—Ç—å.")
    elif –∫–æ–º–∞–Ω–¥–∞ == "–∫—Ç–æ —Ç—ã":
        print("ü§ñ –Ø ‚Äî –Ω–∞—á–∞–ª—å–Ω–∞—è –Ω–µ–π—Ä–æ—Å–µ—Ç—å, —Å–æ–∑–¥–∞–Ω–Ω–∞—è —É–º–Ω—ã–º —á–µ–ª–æ–≤–µ–∫–æ–º.")
    elif –∫–æ–º–∞–Ω–¥–∞ == "–∞–≤—Ç–æ—Ä":
        print("üìå –ú–µ–Ω—è –Ω–∞–ø–∏—Å–∞–ª –ø—Ä–æ–≥—Ä–∞–º–º–∏—Å—Ç, –∫–æ—Ç–æ—Ä–æ–º—É –≤—Å–µ–≥–æ 13 –ª–µ—Ç.")

    # --- –ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ–µ ---
    else:
        print("ü§∑ –ù–µ–∏–∑–≤–µ—Å—Ç–Ω–∞—è –∫–æ–º–∞–Ω–¥–∞. –ù–∞–ø–∏—à–∏ '–ø–æ–º–æ—â—å' –¥–ª—è —Å–ø–∏—Å–∫–∞.")
