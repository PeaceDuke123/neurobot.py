    os.mkdir("data")

if os.path.exists(—Ñ–∞–π–ª_–ø–∞–º—è—Ç–∏):
    with open(—Ñ–∞–π–ª_–ø–∞–º—è—Ç–∏, "r", encoding="utf-8") as f:
        –ø–∞–º—è—Ç—å = json.load(f)
